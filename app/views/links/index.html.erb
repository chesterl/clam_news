<% @links.each do |link| %>
  <div class="link row clearfix">
    <h2>
      <%= link_to link.title, link %> <br>
      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.name %></small>
    </h2>
    <div class="btn-group">
      <%= link_to 'Visit Link', "http://#{link.url}", class: 'button small' %>
      <%= link_to like_link_path(link), method: :put, class: 'button small' do %>
        Upvote
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: 'button small' do %>
        Downvote
        <%= link.get_downvotes.size %>
      <% end %>
    </div>
  </div>

<% end %>