<%= div_for(comment) do %>
  <div class="comments-wrapper clearfix">
    <div class="left">
      <p class="lead"><%= comment.body %></p>
      <p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.email %></small></p>
    </div>
    <div class="button-group right">
      <% if comment.user == current_user %>
        <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, class: 'button small secondary' %>
      <% end %>
    </div>
  </div>
<% end %>